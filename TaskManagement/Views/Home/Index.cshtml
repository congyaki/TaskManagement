@{
    ViewData["Title"] = "Quản lý giao việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- CSS bổ sung -->
<style>
    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
        }

    .dropdown-menu {
        border-radius: 0.5rem;
    }

    .bg-gradient-primary {
        background-image: linear-gradient(180deg, #4e73df 10%, #2e59d9 100%);
    }

    .text-white {
        color: #fff;
    }

    .rounded-top {
        border-top-left-radius: 1.25rem;
        border-top-right-radius: 1.25rem;
    }

    .shadow-lg {
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-body {
        padding: 2rem;
    }
</style>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Xuất báo cáo
    </a>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Nhiệm vụ hoàn thành -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Nhiệm vụ hoàn thành
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">75%</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nhiệm vụ đang xử lý -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Nhiệm vụ đang xử lý
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">20%</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-spinner fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nhiệm vụ chờ duyệt -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Nhiệm vụ chờ duyệt
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">15%</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tổng nhiệm vụ -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Tổng nhiệm vụ
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">150</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tasks fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Biểu đồ tiến độ -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow-lg mb-4 rounded-lg">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary text-white rounded-top">
                <h6 class="m-0 font-weight-bold">Tiến độ nhiệm vụ</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle text-white" href="#" role="button" id="dropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow-lg animated--fade-in"
                         aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Tuỳ chọn:</div>
                        <a class="dropdown-item" href="#">Hành động</a>
                        <a class="dropdown-item" href="#">Tùy chọn khác</a>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="chart-area">
                    <canvas id="taskProgressChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ phân loại -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Phân loại công việc</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="taskTypeChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Biểu đồ nhóm dự án -->
    <div class="col-xl-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Phân bố nhóm dự án</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="projectGroupChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ thời gian xử lý -->
    <div class="col-xl-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thời gian xử lý nhiệm vụ</h6>
            </div>
            <div class="card-body">
                <div class="chart-line">
                    <canvas id="taskTimeChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Biểu đồ tiến độ
    new Chart(document.getElementById('taskProgressChart'), {
        type: 'line',
        data: {
            labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'],
            datasets: [{
                label: 'Tiến độ hoàn thành',
                data: [50, 60, 70, 80, 90],
                backgroundColor: 'rgba(78, 115, 223, 0.1)',
                borderColor: 'rgba(78, 115, 223, 1)',
                borderWidth: 2,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        font: {
                            weight: 'bold'
                        }
                    }
                },
                tooltip: {
                    backgroundColor: '#2e59d9',
                    titleColor: '#fff',
                    bodyColor: '#fff',
                    borderColor: '#4e73df',
                    borderWidth: 1
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        borderColor: '#ccc',
                        borderWidth: 1
                    },
                    ticks: {
                        color: '#6e7e8b',
                        font: {
                            weight: 'bold'
                        }
                    }
                },
                x: {
                    ticks: {
                        color: '#6e7e8b',
                        font: {
                            weight: 'bold'
                        }
                    }
                }
            }
        }
    });

    // Biểu đồ phân loại công việc
    new Chart(document.getElementById('taskTypeChart'), {
        type: 'pie',
        data: {
            labels: ['Dự án', 'Nghiên cứu', 'Hỗ trợ kỹ thuật'],
            datasets: [{
                data: [40, 35, 25],
                backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });

    // Biểu đồ nhóm dự án
    new Chart(document.getElementById('projectGroupChart'), {
        type: 'bar',
        data: {
            labels: ['Nhóm A', 'Nhóm B', 'Nhóm C'],
            datasets: [{
                label: 'Số dự án',
                data: [5, 7, 3],
                backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc']
            }]
        }
    });

    // Biểu đồ thời gian xử lý
    new Chart(document.getElementById('taskTimeChart'), {
        type: 'line',
        data: {
            labels: ['Tuần 1', 'Tuần 2', 'Tuần 3', 'Tuần 4'],
            datasets: [{
                label: 'Thời gian xử lý (giờ)',
                data: [10, 8, 7, 5],
                backgroundColor: 'rgba(255, 99, 132, 0.1)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 2
            }]
        }
    });
</script>


