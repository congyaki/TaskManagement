@model TaskManagement.Entities.TblDmDepartment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center pt-3">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body">
                <h4 class="card-title text-center text-secondary">Chỉnh sửa bộ môn</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Code" class="form-label fw-bold">Mã bộ môn</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                            <input asp-for="Code" class="form-control" />
                        </div>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên bộ môn</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CreatedBy" class="form-label fw-bold">Mô tả</label>
                        <textarea asp-for="CreatedBy" class="form-control" id="description"></textarea>
                        <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>


                    <div class="d-flex justify-content-end mt-4">
                        <input type="submit" value="Lưu" class="btn-custom" />
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-link text-secondary">← Trở về</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
