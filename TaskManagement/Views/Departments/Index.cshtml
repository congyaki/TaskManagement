@model IEnumerable<TaskManagement.Entities.TblDmDepartment>

@{
    ViewData["Title"] = "Danh sách phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <h2>DANH SÁCH BỘ MÔN</h2>
    <a class="btn-custom" asp-action="Create">Thêm bộ môn</a>
</div>

<table class="tabledpm">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Code)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>           
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>    
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning mr-3">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-info mr-3">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

