@model TaskManagement.Entities.TblDmDepartment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center ">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center text-primary mb-4">Tạo mới bộ môn</h2>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Code" class="font-weight-bold">Mã bộ môn</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-barcode text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Code" class="form-control" placeholder="Nhập mã bộ môn" />
                    </div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Name" class="font-weight-bold">Tên bộ môn</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-building text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên bộ môn" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CreatedBy" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="CreatedBy" class="form-control" id="description"></textarea>
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn-custom">
                        <i class="fas fa-check"></i> Create
                    </button>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-link text-secondary">← Trở về</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
