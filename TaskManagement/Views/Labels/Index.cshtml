@model IEnumerable<TaskManagement.Entities.TblDmLabel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <h2>DANH SÁCH NHÃN DÁN</h2>
    <a class="btn-custom" asp-action="Create">Thêm nhán dãn</a>
</div>
<table class="tabledpm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span class="d-block rounded" style="background-color: @item.Color; width: 100px; height: 20px"></span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div class="btn-group" role="group">
                   <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning mr-3">
                     <i class="fas fa-edit"></i>
                   </a>
                   <a asp-action="Details" asp-route-id="@item.Id" class="text-info mr-3">
                     <i class="fas fa-info-circle"></i>
                   </a>
                   <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">
                     <i class="fas fa-trash-alt"></i>
                   </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
