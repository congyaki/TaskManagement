@model TaskManagement.Entities.TblTask

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center ">
    <div class="card shadow-lg p-4" style="max-width: 1400px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center card-customized-header mb-4">Tạo Công Việc</h2>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Title" class="font-weight-bold">Mã công việc</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-barcode text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Title" class="form-control" placeholder="Nhập mã công việc " />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="StartDate" class="font-weight-bold">Thời gian bắt đầu</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-building text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="StartDate" class="form-control" placeholder="Nhập thời gian bắt đầu" />
                    </div>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="EndDate" class="font-weight-bold">Thời gian kết thúc</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-building text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="EndDate" class="form-control" placeholder="Nhập thời gian kết thúc" />
                    </div>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Priority" class="font-weight-bold">Mức độ ưu tiên</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-building text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Priority" class="form-control" placeholder="Chọn mức độ ưu tiên" />
                    </div>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" id="description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Status" class="font-weight-bold">Trạng thái</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-building text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Status" class="form-control" placeholder="Nhập tên bộ môn" />
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CreatedBy" class="font-weight-bold">Người thực hiện</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-building text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="CreatedBy" class="form-control" placeholder="Nhập người thực hiện" />
                    </div>
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn-custom">
                        <i class="fas fa-check"></i> Tạo bộ môn
                    </button>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-link text-secondary">← Trở về</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
