@model TaskManagement.Models.Task.Command.TaskCommandDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/csstask/create.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 1400px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center card-customized-header mb-4">Tạo Công Việc</h2>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tiêu đề công việc -->
                <div class="form-group mb-4">
                    <label asp-for="Title" class="font-weight-bold">Tên công việc</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-barcode text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tên công việc" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Mã công việc -->
                <div class="form-group mb-4">
                    <label asp-for="Code" class="font-weight-bold">Mã công việc</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-barcode text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Code" class="form-control" placeholder="Nhập mã công việc" />
                    </div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <!-- Thời gian bắt đầu -->
                <div class="form-group mb-4">
                    <label asp-for="StartDate" class="font-weight-bold">Thời gian bắt đầu</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-clock text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="StartDate" class="form-control" type="datetime-local" />
                    </div>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- Thời gian kết thúc -->
                <div class="form-group mb-4">
                    <label asp-for="EndDate" class="font-weight-bold">Thời gian kết thúc</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-clock text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="EndDate" class="form-control" type="datetime-local" />
                    </div>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Mức độ ưu tiên -->
                <div class="form-group mb-4">
                    <label asp-for="SelectedPriority" class="font-weight-bold">Mức độ ưu tiên</label>
                    @Html.DropDownListFor(
                        model => model.SelectedPriority,
                        new SelectList(Model.Priorities, "Value", "Text"),
                        "Chọn mức độ ưu tiên",
                        new { @class = "form-control" }
                    )
                    <span asp-validation-for="SelectedPriority" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="form-group mb-4">
                    <label asp-for="Description" class="font-weight-bold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả công việc"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Trạng thái -->
                @* <div class="form-group mb-4">
                    <label asp-for="Status" class="font-weight-bold">Trạng thái</label>
                    @Html.EnumDropDownListFor(
                        model => model.Status,
                        new { @class = "form-control", @placeholder = "Chọn trạng thái" }
                    )
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div> *@

                <!-- Người thực hiện -->
                <div class="form-group mb-4">
                    <label for="SelectedUserIds" class="font-weight-bold">Người thực hiện</label>
                    @Html.ListBoxFor(
                        model => model.SelectedUserIds,
                        new SelectList(Model.Users, "Value", "Text"),
                        new { @class = "form-control", size = "5" }
                    )
                    <span asp-validation-for="SelectedUserIds" class="text-danger"></span>
                </div>

                <!-- Nhãn -->
                <div class="form-group mb-4">
                    <label for="SelectedLabelIds" class="font-weight-bold">Nhãn</label>
                    @Html.ListBoxFor(
                        model => model.SelectedLabelIds,
                        new SelectList(Model.Labels, "Value", "Text"),
                        new { @class = "form-control", size = "5" }
                    )
                    <span asp-validation-for="SelectedLabelIds" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn-custom">
                        <i class="fas fa-check"></i> Tạo công việc
                    </button>
                </div>
                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-link text-secondary">← Trở về</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
