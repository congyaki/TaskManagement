@model TaskManagement.Utils.Dtos.PagedResult<TaskManagement.Models.Task.Query.TaskQueryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="font-weight-bol">DANH SÁCH CÔNG VIỆC</h1>

<p>
    <a asp-action="Create">Thêm Công Viêc</a>
</p>
<table class="tabledpm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Title)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Priority)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().EstimatedTime)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Description)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Status)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().CreatedBy)</th>
            <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().CreatedAt)</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="pagination">
    Page @Model.PageIndex of @Model.PageCount
</div>
