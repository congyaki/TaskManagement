@page
@using TaskManagement.Areas.Identity.Pages.Register;
@model RegisterModel
@{
    ViewData["Title"] = "Tạo tài khoản";
}


<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <label asp-for="Input.LastName">Họ</label>
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Họ" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <label asp-for="Input.FirstName">Tên</label>
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="Tên" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <label asp-for="Input.Code">Mã nhân viên</label>
                <input asp-for="Input.Code" class="form-control" autocomplete="code" aria-required="true" placeholder="Code" />
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <label asp-for="Input.DepartmentId">Department</label>
                <select asp-for="Input.DepartmentId" class="form-control" asp-items="Model.Departments">
                    <option value="">Select a Department</option>
                </select>
                <span asp-validation-for="Input.DepartmentId" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-floating">
        <label asp-for="Input.Password">Mật Khẩu</label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật Khẩu" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-2">
        <label asp-for="Input.ConfirmPassword">Xác Nhận Mật Khẩu</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật Khẩu" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Tạo Tài Khoản</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
